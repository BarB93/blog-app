{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "no-console": "warn",
    "semi": ["error", "never"],
    "no-debugger": "warn",
    "prefer-const": "warn",
    "yoda": "warn",
    "no-var": "warn",
    "no-undefined": "warn",
    "trailingComma": "all"
  }
}
